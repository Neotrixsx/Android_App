<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="@string/result"
        android:inputType="number" />

    <Button
        android:id="@+id/bt0"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="133dp"
        android:text="@string/_0" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt0"
        android:layout_toEndOf="@+id/bt0"
        android:text="@string/_1" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt0"
        android:layout_toEndOf="@+id/bt1"
        android:text="@string/_2" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt0"
        android:layout_below="@+id/bt0"
        android:text="@string/_3" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt1"
        android:layout_alignTop="@+id/bt3"
        android:text="@string/_4" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt2"
        android:layout_alignTop="@+id/bt4"
        android:text="@string/_5" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt0"
        android:layout_below="@+id/bt3"
        android:text="@string/_6" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt1"
        android:layout_alignTop="@+id/bt6"
        android:text="@string/_7" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt2"
        android:layout_alignTop="@+id/bt7"
        android:text="@string/_8" />

    <Button
        android:id="@+id/bt9"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt0"
        android:layout_below="@+id/bt6"
        android:text="@string/_9" />

    <Button
        android:id="@+id/btClr"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt6"
        android:layout_toEndOf="@+id/bt0"
        android:text="@string/_clr" />

    <Button
        android:id="@+id/btEql"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="92dp"
        android:layout_marginStart="13dp"
        android:text="@string/_eql" />

    <Button
        android:id="@+id/btDiv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bt6"
        android:text="@string/_div" />

    <Button
        android:id="@+id/btMul"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bt6"
        android:text="@string/_mul" />

    <Button
        android:id="@+id/btSub"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bt3"
        android:text="@string/_sub" />

    <Button
        android:id="@+id/btSum"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bt0"
        android:text="@string/_sum" />
</RelativeLayout>